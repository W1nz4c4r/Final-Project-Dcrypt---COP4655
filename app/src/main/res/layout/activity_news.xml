                android:layout_marginTop="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="15dp"

                />

            <TextView
                android:id="@+id/nullbite2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/image_in_card2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/roboto_slab"
                android:text="Description: "
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/desc_in_card2"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/image_in_card2"
                app:layout_constraintStart_toEndOf="@id/nullbite2"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/roboto_slab"
                android:textSize="17dp"

                />

            <TextView
                android:id="@+id/link_in_card2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/desc_in_card2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="15dp"
                android:autoLink="web"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="20dp"

                />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_news_content3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_news_content2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cad_news_P3"
                >

                <TextView
                    android:id="@+id/tittle_in_card3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/cad_news_P3"
                    app:layout_constraintStart_toStartOf="@id/cad_news_P3"
                    android:layout_marginTop="18dp"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/roboto_slab"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"

                    />

                <ImageView
                    android:id="@+id/image_in_card3"
                    android:layout_width="255dp"
                    android:layout_height="180dp"
                    app:layout_constraintTop_toBottomOf="@id/tittle_in_card3"
                    android:layout_marginTop="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="15dp"

                    />

                <TextView
                    android:id="@+id/nullbite3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Description: "
                    app:layout_constraintTop_toBottomOf="@id/image_in_card3"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_slab"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/desc_in_card3"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/image_in_card3"
                    app:layout_constraintStart_toEndOf="@id/nullbite3"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_slab"
                    android:textSize="17dp"

                    />

                <TextView
                    android:id="@+id/link_in_card3"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/desc_in_card3"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:autoLink="web"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp"

                    />








            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/card_news_content4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/card_news_content3"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:padding="10dp"
            >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cad_news_P4"
                >

                <TextView
                    android:id="@+id/tittle_in_card4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/cad_news_P4"
                    app:layout_constraintStart_toStartOf="@id/cad_news_P4"
                    android:layout_marginTop="18dp"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/roboto_slab"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="20dp"


                    />

                <ImageView
                    android:id="@+id/image_in_card4"
                    android:layout_width="255dp"
                    android:layout_height="180dp"
                    app:layout_constraintTop_toTopOf="@id/tittle_in_card4"
                    android:layout_marginTop="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="15dp"

                    />

                <TextView
                    android:id="@+id/nullbite4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Description: "
                    app:layout_constraintTop_toBottomOf="@id/image_in_card4"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_slab"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/desc_in_card4"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toBottomOf="@id/image_in_card4"
                    app:layout_constraintStart_toEndOf="@id/nullbite4"
                    android:layout_marginHorizontal="15dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto_slab"
                    android:textSize="17dp"

                    />

                <TextView
                    android:id="@+id/link_in_card4"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/desc_in_card4"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="15dp"
                    android:autoLink="web"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="20dp"

                    />








            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>



    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/Bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/logBACK"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_bar"
        />

</RelativeLayout>